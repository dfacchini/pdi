<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            id: filechooser
            path: './'
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancelar"
                on_release: root.fechar()
            Button:
                text: "Carregar"
                on_release: root.carregar(app, filechooser.selection)

<LoadDialogSec>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"'imagens/'
        FileChooserIconView:
            id: filechooser
            path: './'
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancelar"
                on_release: root.fechar()
            Button:
                text: "Carregar"
                on_release: root.carregar(app, filechooser.selection)

<SaveDialog>:
    text_input: text_input
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            path: './'
            on_selection: text_input.text = self.selection and self.selection[0] or ''
        TextInput:
            id: text_input
            size_hint_y: None
            height: 30
            multiline: False
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancelar"
                on_release: root.fechar()
            Button:
                text: "Salvar"
                on_release: root.salvar(app, filechooser.path, text_input.text)
