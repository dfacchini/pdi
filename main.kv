<MainLayout>:
    imagem: id_imagem
    imagem_secundaria: id_imagem_2
    orientation: 'vertical'
    BoxLayout:
        size_hint_y: None
        height: 30
        Button:
            text: 'Arquivo'
            on_release: root.menu_arquivo.open(self)
        Button:
            text: 'Realce'
            on_release: root.menu_imagem.open(self)
        Button:
            text: 'Filtros'
            on_release: root.menu_filtros.open(self)
        Button:
            text: 'Lógicos'
            on_release: root.menu_operadores_logicos.open(self)
        Button:
            text: 'Aritméticos'
            on_release: root.menu_operadores_aritmeticos.open(self)
    BoxLayout:
        Image:
            id: id_imagem
            size: root.size

        Image:
            id: id_imagem_2
            size: root.size

<MenuArquivoDropDown>:
    Button:
        text: 'Carregar'
        size_hint_y: None
        height: 44
        on_release: root.select('carregar_imagem')
    Button:
        text: 'Carregar Secundaria'
        size_hint_y: None
        height: 44
        on_release: root.select('carregar_imagem_secundaria')
    Button:
        text: 'Salvar'
        size_hint_y: None
        height: 44
        on_release: root.select('salvar_imagem')
    Button:
        text: 'Fechar'
        size_hint_y: None
        height: 44
        on_press: app.stop()

<MenuImagemDropDown>:
    Button:
        text: 'Limpar'
        size_hint_y: None
        height: 44
        on_release: root.select('limpar', app)
    Button:
        text: 'Escala de Cinza'
        size_hint_y: None
        height: 44
        on_release: root.select('mostrar_imagem_cinza', app)
    Button:
        text: 'Histograma'
        size_hint_y: None
        height: 44
        on_release: root.select('mostrar_histograma', app)
    Button:
        text: 'Equalizar'
        size_hint_y: None
        height: 44
        on_release: root.select('mostrar_imagem_equalizada', app)

<MenuFiltros>:
    Button:
        text: 'Correlação'
        size_hint_y: None
        height: 44
        on_release: root.select('aplicar_filtro', app, 'correlacao')
    Button:
        text: 'Convolução'
        size_hint_y: None
        height: 44
        on_release: root.select('aplicar_filtro', app, 'convolucao')
    Button:
        text: 'Passa-Alta'
        size_hint_y: None
        height: 44
        on_release: root.select('aplicar_filtro', app, 'passa_alta')
    Button:
        text: 'Mediana'
        size_hint_y: None
        height: 44
        on_release: root.select('aplicar_filtro', app, 'mediana')
    Button:
        text: 'Moda'
        size_hint_y: None
        height: 44
        on_release: root.select('aplicar_filtro', app, 'moda')

    Button:
        text: 'Operador Robert'
        size_hint_y: None
        height: 44
        on_release: root.select('aplicar_filtro', app, 'robert_convolucao')

